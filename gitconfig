[user]
    name = Marc Zych
    email = marczych@gmail.com
[github]
    user = marczych
[core]
    excludesfile = ~/dotfiles/gitignore
    editor = /usr/bin/vim
[color]
    ui = true
[alias]
    addp = add -p
    alias = config --get-regexp ^alias\\.
    ap = add -p
    catpc = commit -a --amend -C HEAD
    ci = commit
    cia = commit -a
    co = checkout
    copy-sha = "!git rev-parse HEAD | pbcopy"
    cp = cherry-pick
    cur = rev-parse HEAD
    di = diff --patience --find-renames --find-copies
    dim = diff --patience --find-renames --find-copies origin/master...
    ds = diff --cached --find-renames --find-copies
    f = fetch
    g = grep
    gl = grep -l
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cd) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    m = merge --no-edit
    pfwl = push --force-with-lease
    r = rebase
    rb = recent-branches
    rc = rebase --continue
    rh = reset --hard
    s = submodule
    sb = start-branch
    st = status -sb
    std = diff HEAD --stat
    sui = submodule update --init --recursive
    ur = reset --hard @{u}
[push]
    default = current
[merge]
    conflictstyle = diff3
    tool = vimdiff
[mergetool]
    keepBackup = false
[fetch]
    prune = true
[diff]
    renameLimit = 1000000
[rerere]
    enabled = true
