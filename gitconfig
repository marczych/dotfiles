[user]
   name = Marc Zych
   email = marczych@gmail.com
[github]
   user = marczych
[core]
   excludesfile = ~/dotfiles/gitignore
   editor = /usr/bin/vim
[color]
   ui = true
[alias]
   addp = add -p
   alias = config --get-regexp ^alias\\.
   ap = add -p
   catpc = commit -a --amend -C HEAD
   ci = commit
   cia = commit -a
   co = checkout
   copy-sha = "!git rev-parse HEAD | pbcopy"
   cp = cherry-pick
   cur = rev-parse HEAD
   di = diff --patience
   ds = diff --cached
   f = fetch
   g = grep
   lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cd) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
   r = rebase
   rc = rebase --continue
   recent-branches = for-each-ref --sort=-committerdate refs/heads/
   rh = reset --hard
   s = submodule
   st = status -sb
   std = diff HEAD --stat
   sui = submodule update --init
   ur = reset --hard @{u}
[push]
   default = current
[merge]
   tool = vimdiff
[mergetool]
   keepBackup = false
