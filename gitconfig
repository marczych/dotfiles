[github]
   user = marczych
[core]
   excludesfile = ~/dotfiles/gitignore
   editor = /usr/bin/vim
[color]
   ui = true
[alias]
   ds = diff --cached
   st = status -sb
   std = diff HEAD --stat
   co = checkout
   di = diff
   ci = commit
   cia = commit -a
   addp = add -p
   lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cd) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
   cur = rev-parse HEAD
   cp = cherry-pick
   ap = add -p
   rh = reset --hard
   rc = rebase --continue
   catpc = commit -a --amend -C HEAD
[push]
   default = current
[merge]
	tool = vimdiff
